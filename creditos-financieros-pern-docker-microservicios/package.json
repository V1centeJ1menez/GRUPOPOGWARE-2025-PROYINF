{
  "name": "creditos-financieros-pern-docker-microservicios",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "auth",
    "gateway",
    "frontend"
  ],
  "scripts": {
    "start": "npm run start -ws",
    "start:backend": "npm run start -ws --if-present --filter ./services/* --filter ./auth --filter ./gateway",
    "start:frontend": "npm run start --workspace frontend",
    "install:all": "npm install --workspaces",
    "clean": "rm -rf node_modules **/node_modules"
  }
}
